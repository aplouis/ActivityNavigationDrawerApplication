<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fogoa.activitynavigationdrawerapplication">

    <application
        android:name=".extensions.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SlideShowActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_slideshow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManageActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_manage"
            android:theme="@style/AppTheme.NoActionBar" />
            />
        <activity
            android:name=".ShareActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_share"
            android:theme="@style/AppTheme.NoActionBar" />
            />
        <activity
            android:name=".SendActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_send"
            android:theme="@style/AppTheme.NoActionBar" />
            />
    </application>

</manifest>